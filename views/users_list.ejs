<!doctype html>
<html>
  <head>
    <title>Users - <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Registered users for <%= shopData.shopName %></h1>

    <% if (users.length === 0) { %>
      <p>No users registered yet.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(u) { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.username %></td>
              <td><%= u.first %></td>
              <td><%= u.last %></td>
              <td><%= u.email %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>

    <p><a href="/">Back to home</a></p>
  </body>
</html>
