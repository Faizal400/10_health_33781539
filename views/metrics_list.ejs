<!doctype html>
<html>
  <head>
    <title>Your body measurements - <%= appData.appName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Your body measurement history</h1>

    <p><a href="/metrics/add">Log new measurements</a></p>

    <% if (!measurements || measurements.length === 0) { %>
      <p>You havenâ€™t logged any measurements yet.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Weight (kg)</th>
            <th>Resting HR</th>
            <th>BP (sys / dia)</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <% measurements.forEach(function(m) { %>
            <tr>
              <td>
                <% if (m.recorded_at && m.recorded_at.toISOString) { %>
                  <%= m.recorded_at.toISOString().slice(0,19).replace('T',' ') %>
                <% } else { %>
                  N/A
                <% } %>
              </td>
              <td><%= m.weight_kg || '-' %></td>
              <td><%= m.resting_hr || '-' %></td>
              <td>
                <% if (m.systolic_bp || m.diastolic_bp) { %>
                  <%= m.systolic_bp || '?' %> / <%= m.diastolic_bp || '?' %>
                <% } else { %>
                  -
                <% } %>
              </td>
              <td><%= m.notes || '' %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>

    <p><a href="/">Back to home</a></p>
  </body>
</html>