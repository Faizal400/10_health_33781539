<!doctype html>
<html>
  <head>
    <title>Audit Log - <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Login Audit Log</h1>

    <% if (auditEntries && auditEntries.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Time</th>
            <th>Username</th>
            <th>Success</th>
            <th>Message</th>
          </tr>
        </thead>
        <tbody>
          <% auditEntries.forEach(function(entry) { %>
            <tr>
              <td><%= entry.created_at %></td>
              <td><%= entry.username %></td>
              <td><%= entry.success ? 'Yes' : 'No' %></td>
              <td><%= entry.message %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No audit log entries yet.</p>
    <% } %>

    <p><a href="/">Back to home</a></p>
  </body>
</html>
